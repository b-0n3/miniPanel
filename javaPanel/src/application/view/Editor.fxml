<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.ComboBox?>
<?import javafx.scene.control.TextArea?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.Pane?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.shape.Circle?>
<?import javafx.scene.text.Text?>
<?import javafx.scene.web.HTMLEditor?>

<HBox prefHeight="674.0" prefWidth="1156.0" spacing="10.0" xmlns="http://javafx.com/javafx/11.0.1" xmlns:fx="http://javafx.com/fxml/1" fx:controller="application.controllers.editorController">
   <children>
      <VBox>
         <children>
            <HBox prefHeight="44.0" prefWidth="730.0" spacing="20.0">
               <children>
                  <Button fx:id="editText" mnemonicParsing="false" text="Visual" />
                  <Button fx:id="editHtml" mnemonicParsing="false" text="Html" />
                  <TextField fx:id="Postname" prefHeight="26.0" prefWidth="572.0" promptText="title" />
                  <Button fx:id="TSave" mnemonicParsing="false" text="save" />
                  <Button fx:id="Tcancel" mnemonicParsing="false" text="Cancel" />
               </children>
               <padding>
                  <Insets left="10.0" />
               </padding>
            </HBox>
            <Pane>
               <children>
                  <TextArea fx:id="htmlField" prefHeight="582.0" prefWidth="914.0" />
                  <HTMLEditor fx:id="HtmlEditor" htmlText="&lt;html&gt;&lt;head&gt;&lt;/head&gt;&lt;body contenteditable=&quot;true&quot;&gt;&lt;/body&gt;&lt;/html&gt;" prefHeight="618.0" prefWidth="911.0" />
               </children>
            </Pane>
         </children>
      </VBox>
      <VBox alignment="CENTER" prefHeight="674.0" prefWidth="230.0" spacing="20.0">
         <children>
            <Circle fx:id="postImg" fill="DODGERBLUE" radius="57.0" stroke="BLACK" strokeType="INSIDE" />
            <VBox alignment="CENTER" spacing="10.0">
               <children>
                  <Text strokeType="OUTSIDE" strokeWidth="0.0" text="tags" />
                  <TextField fx:id="tagsFiled" />
                  <ComboBox fx:id="TagsBox" prefWidth="150.0" promptText="Tags" />
                  <Button fx:id="addTag" mnemonicParsing="false" text="save " />
               </children>
            </VBox>
            <Text strokeType="OUTSIDE" strokeWidth="0.0" text="Category" />
            <ComboBox fx:id="CategeryBox" prefWidth="150.0" promptText="Category" />
            <Text strokeType="OUTSIDE" strokeWidth="0.0" text="Add category" />
            <TextField fx:id="CategeryName" promptText="Categery" />
            <HBox alignment="CENTER" spacing="20.0">
               <children>
                  <Button fx:id="SaveCategery" mnemonicParsing="false" text="add Category" />
               </children>
            </HBox>
            <VBox alignment="CENTER" spacing="7.0">
               <children>
                  <Text strokeType="OUTSIDE" strokeWidth="0.0" text="images" />
                  <HBox alignment="CENTER" spacing="20.0">
                     <children>
                        <Button fx:id="AddLocalImage" mnemonicParsing="false" text="upload image" />
                     </children>
                  </HBox>
                  <TextField fx:id="Link" promptText="link" />
                  <Button fx:id="addWebImage" mnemonicParsing="false" text="add web image" />
               </children>
            </VBox>
            <Text fx:id="errorText" strokeType="OUTSIDE" strokeWidth="0.0" text="error text" />
         </children>
      </VBox>
   </children>
</HBox>
